generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  Learning_Developer @map("Learning Developer") 
  Elite_Developer @map("Elite Developer")
  Overseeing_Developer @map("Overseeing Developer")
  Founding_Developer @map("Founding Developer")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())

  username String @unique
  email String @unique
  password String

  role Role @default(Learning_Developer)

  articles Article[]
  profile Profile?
}

model Profile {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  bio String @default("A learning developer that's new to devhub!")

  user User @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId
}

model Article {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  slug String
  title String
  content String

  published Boolean @default(false)

  author User @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId
}